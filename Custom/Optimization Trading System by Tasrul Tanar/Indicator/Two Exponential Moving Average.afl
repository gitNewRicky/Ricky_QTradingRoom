iColor2=ParamColor( "MA Long Color", colorBlue );
iStyle2=ParamStyle("MA Long Style"); 
Plot( TAS_EMA( P, Periods ), "Short MA", iColor,iStyle);
Plot( TAS_EMA( P2, Periods2 ), "Long MA", iColor2,iStyle2);