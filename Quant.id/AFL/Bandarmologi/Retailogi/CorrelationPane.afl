_t0 = GetPerformanceCounter();

#include_once <..\Quant.id\AFL\Bandarmologi\Retailogi\RetailogiCommon.afl>

_SECTION_BEGIN("Correlation");
	// Init as slave pane
	stInitRetailogi(False);
	
	period = Param("Correlation Period", 10, 1, 600);
	distance = Param("Distance", 1, 1, 20);
	
	_N(Indicator = WriteIf(stRetailogiParamUseIVR, "Inverted Retail", "Retail"));
	stSetBackgroundTitle(Name() + " " + Indicator + " Correlation(" + period + ", " + distance + ")");
	stSetBackgroundSubtitle(QID_VERSION_LINE);
	
	holding = stBdGetRetailCumShares(stRetailogiStartBalanceDate);
	if (stRetailogiParamUseIVR)
		holding = stInvert(holding);
		
	matchCount = stSimpleCorrelation(C, holding, period, distance);
	matchPercent = int(matchCount * 100 / period);
		
	stPlotLine(matchPercent, Indicator + " Correlation", "%", 0, 100, True, True);
	Plot(0, "0", ColorRGB(200,200,200), styleNoTitle | styleNoLabel | styleLine, null, Null, 0, 0);
	Plot(100, "100", ColorRGB(220,220,220), styleNoTitle | styleNoLabel | styleLine, null, Null, 0, 0);
_SECTION_END();

_t1 = GetPerformanceCounter();
_TRACE(Name() + " " + Indicator + " correlation: " + Int(_t1 - _t0) + " ms");
